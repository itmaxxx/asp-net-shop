@model Category

<div class="col col-12 col-sm-6 col-md-3 mb-4">
    <div class="card border-light h-100">
        @if (Model.Photo != null)
        {
            <div class="card-img-top h-100 d-flex align-items-center justify-content-center">
                <img class="mw-100" style="max-height: 240px;" src="@Model.Photo" alt="@Model.Name">
            </div>
        }
        <div class="card-body text-center">
            <h5 class="card-title">@Model.Name</h5>
            <div class="btn-group-vertical" role="group">
                <a asp-area="" asp-controller="Categories" asp-action="Category" asp-route-id="@Model.Id" class="btn btn-primary">View products</a>
            </div>

            @if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("Administrator"))
            {
                <form method="post" asp-controller="Admin" asp-action="DeleteCategory">
                    <div class="btn-group-vertical mt-2">
                        <input type="hidden" name="categoryId" value="@Model.Id" />
                        <a asp-area="" asp-controller="Admin" asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Edit category</a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
