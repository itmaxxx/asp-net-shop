@model Product

@{
    ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Categories" asp-action="Category" asp-route-id="@Model.Category.Id">@Model.Category.Name</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="card border-light">
    <div class="row g-0">
        @if (Model.Photo != null)
        {
            <div class="col-md-8 d-flex align-items-center justify-content-center">
                <img src="/img/@Model.Photo" style="max-height: 90vh;" alt="@Model.Name">
            </div>
        }
        <div class="col-md-4">
            <div class="card-body">
                <h1 class="card-title h2">@Model.Name</h1>
                <h4>$@Model.Price</h4>
                <p class="card-text">@Model.Description</p>
                <div class="btn-group-vertical mt-3" role="group">
                    <a asp-area="" asp-controller="Products" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-success btn-lg"><i class="bi bi-cart-plus"></i> Add to cart</a>
                    @if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("Administrator"))
                    {
                        <a asp-area="" asp-controller="Products" asp-action="EditProduct" asp-route-id="@Model.Id" class="btn btn-dark btn-lg"><i class="bi bi-pencil"></i> Edit product</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
