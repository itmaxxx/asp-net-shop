@model User

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Name: @Model.FullName</li>
        <li class="list-group-item">Email: @Model.Email</li>
        <li class="list-group-item">Role: @Model.Role.Name</li>
    </ul>
</div>

<form class="mt-3" method="post" asp-controller="Account" asp-action="Logout">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-box-arrow-left"></i> Logout
    </button>
</form>