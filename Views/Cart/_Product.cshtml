<div class="col col-12 col-sm-6 col-md-3 mb-4">
    <div class="card h-100 border-light">
        @if (Model.Product.Photo != null)
        {
            <div class="card-img-top h-100 d-flex align-items-center justify-content-center">
                <img class="mw-100" style="max-height: 240px;" src="/img/@Model.Product.Photo" alt="@Model.Product.Name">
            </div>
        }
        <div class="card-body text-center">
            <h5 class="card-title">@Model.Product.Name</h5>
            <h5 class="card-text">$@Model.Product.Price x @Model.Quantity</h5>
            <form method="post" asp-controller="Cart" asp-action="Remove">
                <div class="btn-group-vertical mt-3" role="group">
                    <a asp-area="" asp-controller="Products" asp-action="Index" asp-route-id="@Model.Product.Id" class="btn btn-primary btn-lg"><i class="bi bi-eye"></i> View details</a>
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-cart-plus"></i> Remove from cart
                    </button>
                    @if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("Administrator"))
                    {
                        <a asp-area="" asp-controller="Products" asp-action="EditProduct" asp-route-id="@Model.Product.Id" class="btn btn-dark btn-lg"><i class="bi bi-pencil"></i> Edit product</a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
